						next = getArrayItem(branch.children, classname);
						if (!next)
						{
							next = {label:classname, children:[]};
							branch.children.push(next);
						}

						branch = next;

						branch.children.push(t.methodName);
					}
					else if (item is List)
					{
*/
						var list:List = List(item);
						ListCollectionView(list.dataProvider).addItem( {result:result, method: t.methodName, className: t.className, test:test, error:error} );
						list.selectedIndex = list.dataProvider.length;
						list.verticalScrollPosition = list.maxVerticalScrollPosition;
						onTestSelected();
/*
					}

							lastPackageNameLength += 2;
						}

						var classname:String = lastPackageName.substring(lastPackageNameLength);

						var branch:* = testTree[packageNames[0]];
						if (!branch)
						{
							branch = {label: packageNames[0], children: []};
							testTree[packageNames[0]] = branch;
							ListCollectionView(tree.dataProvider).addItem(branch);
						}

						var next:*;
						packageNames.shift();
						for each (var packageName:String in packageNames)
						{
							next = getArrayItem(branch.children, packageName);
